<% unless flash[:success].nil?%>
  <div class="alert alert-success m-t-30">
    <button class="close" data-dismiss="alert"></button>
    <div class="row clearfix">
      <div class="col-md-9">
        <h5 class="no-margin inline p-l-20"><a href="#" class="link"><%=raw flash[:success] %></a>
        <!-- <span class="m-l-20"><%#= flash.now[:notice] %></span></h5> -->
      </div>
    </div>
  </div>
<% end %>

