<!-- tab-pane: profile -->
<div class="tab-pane active" id="profile">
    <!-- form profile -->
	
    <%= form_for @user, :html => {:class => "panel form-horizontal form-bordered"} do |f| %>
        <div class="panel-body pt0 pb0">
            <div class="form-group header bgcolor-default">
                <div class="col-md-12">
					
                    <h4 class="semibold text-primary mt0 mb5">Charterholder Profile</h4>
                    <p class="text-default nm">This information appears on your public profile.</p>
                </div>
            </div>
            <div class="form-group">
				<%= f.fields_for :user_profile_pictures, :html => {:multipart => true} do |builder| %>
                <label class="col-sm-3 control-label">Photo</label>
                <div class="col-sm-9">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="col-md-5">
                            <div class="fileinput-new thumbnail">
                                <img class="img-circle img-bordered img-responsive" src="<%= @user.avatar %>" alt="...">
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="border-radius: 50%;"></div>
                        </div>
                        <div class="col-md-7 pt30">
                            <div class="row">
                                <div class="col-md-6">
                                    <span class="btn btn-sm btn-default btn-file">
                                    <span class="fileinput-new">Select image</span>
                                    <span class="fileinput-exists">Change</span>
                                    <%= builder.file_field :photo do %>
                                        <input type="file" name="...">
                                     <% end %>
                                    </span>
                                </div>
                                <div class="col-md-6 row">
                                    <a href="#" class="btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
			<% end %>
            <div class="form-group">
                <label class="col-sm-3 control-label">Name</label>
                <div class="col-sm-6">
					<%#= f.text_field :prefix, class: "form-control", placeholder: "Prefix (i.e. Mr)" %>
					<%= f.text_field :first_name, class: "form-control", placeholder: "First name." %>
					<br>
					
					<%= f.text_field :middle_name, class: "form-control", placeholder: "middle name." %>
					<br>
					<%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
					<br>
					<%= f.text_field :suffix, class: "form-control col-md-4", placeholder: "Suffix" %>
                </div>
            </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Email</label>
             <div class="col-sm-6">
				<%= f.email_field :email, class: "form-control", placeholder: "name@domain.com"  %>
             </div>
         </div>
		 <%= f.fields_for :user_detail, @user_detail do |builder| %>
         <div class="form-group">
             <label class="col-sm-3 control-label">Phone Number (optional)</label>
             <div class="col-sm-6">
                <%= builder.text_field :phone_number, class: "form-control"  %>
             </div>
         </div>
		 
         <div class="form-group">
             <label class="col-sm-3 control-label">Title</label>
             <div class="col-sm-6">
                <%= builder.text_field :title, class: "form-control"  %>
             </div>
         </div>
          
          <div class="form-group">
             <label class="col-sm-3 control-label">Company</label>
             <div class="col-sm-6">
				<%= builder.text_field :company, class: "form-control"  %>
                 
             </div>
         </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">City</label>
                <div class="col-sm-6">
					<%= builder.select(:city, User.cities_list.sort, {prompt: "Select Location"}, {:class => "form-control"})%>
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-3 control-label">Twitter</label>
                <div class="col-sm-8">
					<%= builder.text_field :twitter, class: "form-control"  %>
                    
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Instagram</label>
                <div class="col-sm-8">
					<%= builder.text_field :instagram, class: "form-control"  %>
                    
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Facebook</label>
                <div class="col-sm-8">
					<%= builder.text_field :facebook, class: "form-control"  %>
                </div>
            </div>
			
          
            
            <div class="form-group header bgcolor-default">
                <div class="col-md-12">
                    <h4 class="semibold text-primary nm">LinkedIn</h4>
                </div>
            </div>
             <div class="form-group">
                <label class="col-sm-3 control-label">Linkedin</label>
                <div class="col-sm-8">
                    <%= builder.text_field :linkedin, class: "form-control"  %>
                </div>
            </div>
            <% end %>
        </div>

        <div class="panel-footer pt15 pb15">
            <div class="col-md-6 col-md-offset-3">
                 <%= f.submit "Save changes", class: "btn btn-block btn-primary btn-lg" %>
            </div>
        </div>
    </form>
	<% end %>
    <!--/ form profile -->
</div>
<!--/ tab-pane: profile -->
